version: '3'
services:
  database:
    image: mysql
    environment:
      MYSQL_DATABASE: test
      MYSQL_USER: test
      MYSQL_PASSWORD: test
      MYSQL_ALLOW_EMPTY_PASSWORD: true
  backend:
    image: https://gitlab.com/rsamigullin/dev-tools-simple-ci/master/service-backend
    restart: always
    ports:
      - "8080:8080"
  frontend: 
    image: registry.gitlab.com/rsamigullin/dev-tools-simple-ci/master/service-frontend
    environment:
      NODE_OPTIONS: --openssl-legacy-provider
    ports:
      - "80:80"
